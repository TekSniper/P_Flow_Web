@page
@using Org.BouncyCastle.Crypto.Engines
@using System.Runtime.CompilerServices
@model P_Flow_Web.Pages.Compte.ComptesModel
@{
    ViewData["title"] = "Les comptes";
    Layout = "_LayoutUser";
}

<div class="columns is-centered">
    @if (Model.ErrorMessage != string.Empty)
    {
        <div class="notification">
            <button class="delete"></button>
            <strong>Exception</strong>
            <p>@Model.ErrorMessage</p>
        </div>
    }
    <div class="column is-10-desktop is-10-widescreen is-8-tablet">
        <h1 class="title">Les comptes du shop</h1>
        <nav class="level">
            <div class="level-left">
                <div class="level-item">
                    <strong>
                    <span class="icon">
                        <i class="fa-solid fa-filter"></i>
                    </span></strong>&nbsp;Recherche par type
                </div>
            </div>
        </nav>
        <div>
            <table class="table is-fullwidth">
                <thead>
                <tr>
                    <th>Num</th>
                    <th>Type</th>
                    <th>Intitulé</th>
                    <th>Phone</th>
                    <th>Solde</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var compte in Model.comptes)
                {
                    <tr>
                        <td>@compte.NumeroCompte</td>
                        <td>@compte.DesignationType</td>
                        <td>@compte.Intitule</td>
                        <td>@compte.NumeroPhone</td>
                        <td>@compte.Solde.ToString("##,##.##")&nbsp;@compte.Devise</td>
                        <td>
                            <a href="#" class="button is-light is-link">Historique des mvt</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>