@page
@model P_Flow_Web.Pages.Menu.Liste

@{
    Layout = "_LayoutUser";
    ViewData["title"] = "Liste des menus";
}

<div class="columns is-centered">
    <div class="column is-10-desktop is-10-widescreen is-8-tablet">
        <h1 class="title">Liste des menus</h1>
        <nav class="level">
            <div class="level-left">
                <div class="level-item">
                    <form method="get">
                        <div class="field has-addons">
                            <p class="control has-icons-left">
                                <input type="text" class="input" placeholder="Recherche par le code parent" name="parent">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-filter"></i>
                                </span>
                            </p>
                            <p class="control">
                                <input type="submit" class="button is-link is-outlined" value="Rechercher">
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <table class="table is-fullwidth">
            <thead>
            <tr>
                <th>Code</th>
                <th>Designation</th>
                <th>Parent</th>
                <th>Icon</th>
                <th>Url</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var list in Model.menus)
            {
                <tr>
                    <td>@list.Code</td>
                    <td>@list.Designation</td>
                    @if (list.Parent == "NULL")
                    {
                        <td>
                            <span class="tag is-danger">@list.Parent</span>
                        </td>
                    }
                    @if (list.Parent != "NULL")
                    {
                        <td>
                            <span class="tag is-success">@list.Parent</span>
                        </td>
                    }
                    <td>@list.Icon</td>
                    <td>@list.Url</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>